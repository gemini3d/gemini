{
  "version": 3,

"configurePresets": [
{
  "name": "release",
  "displayName": "Turns on Release flags",
  "cacheVariables": {
    "CMAKE_BUILD_TYPE": "Release"
  }
},
{
  "name": "reldebug",
  "displayName": "Turns on release and debug flags, including array bounds check.",
  "description": "Runs slower than release",
  "cacheVariables": {
    "CMAKE_BUILD_TYPE": "RelWithDebInfo"
    }
},
{
  "name": "debug",
  "displayName": "Turns on debug flags, including array bounds check.",
  "cacheVariables": {
    "CMAKE_BUILD_TYPE": "Debug"
    }
},
{
  "name": "multi",
  "displayName": "Ninja Multi config",
  "generator": "Ninja Multi-Config",
  "binaryDir": "${sourceDir}/build"
},
{
  "name": "build",
  "displayName": "build all libraries",
  "description": "Build all external libraries (except MPI) without searching for existing libraries.",
  "cacheVariables": {
    "lapack_external": "on",
    "scalapack_external": "on",
    "mumps_external": "on",
    "hdf5_external": "on"
  }
},
{
  "name": "phony"
}
],
"buildPresets": [
  {
    "name": "release",
    "configurePreset": "multi",
    "configuration": "Release"
  },
  {
    "name": "reldebug",
    "configurePreset": "multi",
    "configuration": "RelWithDebInfo"
  },
  {
    "name": "debug",
    "configurePreset": "multi",
    "configuration": "Debug"
  },
  {
    "name": "core",
    "configurePreset": "phony",
    "targets": ["gemini.bin", "gemini3d.run", "gemini3d.compare"]
  }
],
"testPresets": [
{
  "name": "default",
  "configurePreset": "phony",
  "output": {
    "outputOnFailure": true,
    "verbosity": "default"
  },
  "execution": {
    "noTestsAction": "error",
    "stopOnFailure": false
  }
},
{
  "name": "download", "inherits": "default",
  "displayName": "download reference data for subsequent offline tests",
  "description": "download with login HPC node for batch / interactive HPC offline tests",
  "filter": {
    "include": {"name": "download"}
  }
},
{
  "name": "offline", "inherits": "default",
  "displayName": "Run tests without network access",
  "filter": {
    "exclude": {"name": "internetConnectivity", "fixtures": {"setup": "internet_fxt"}}
  }
},
{
  "name": "release", "inherits": "default",
  "displayName": "Ninja MultiConfig: Release",
  "configurePreset": "multi",
  "configuration": "Release"
},
{
  "name": "reldebug", "inherits": "default",
  "displayName": "Ninja MultiConfig: RelWithDebInfo",
  "configurePreset": "multi",
  "configuration": "RelWithDebInfo"
},
{
  "name": "debug", "inherits": "default",
  "displayName": "Ninja MultiConfig: Debug",
  "configurePreset": "multi",
  "configuration": "Debug"
}
]
}
